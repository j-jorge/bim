{
  "style": {
    "feature-deck-path": "container/feature-deck",
    "play-button-server-stats-label-path": "container/server-statistics",

    "debug": [
      "popup/debug"
    ],
    "message-popup": [
      "popup/yes-no-message"
    ],
    "player-statistics": [
      "popup/player-statistics"
    ],
    "settings": [
      "popup/settings"
    ],
    "wallet": [
      "app/screen/part/wallet"
    ],

    "widgets": [
      "app/screen/part/menu-background",
      {
        "stripe-background": [
          {
            "instantiate": "nine_slices",
            "widgets/sprite": [
              {
                "frame": "sprites/menu/red-stripe-1-7-1-136.png",
                "insets.left": 1,
                "insets.top": 7,
                "insets.width": 1,
                "insets.height": 136
              }
            ],
            "z-order": -10
          }
        ],

        "stripe-message": [
          "font/fancy-regular",
          {
            "instantiate": "ax::Label",
            "font.size": 48,
            "parent": "stripe-background",
            "font.color": "white",
            "shadow.color": "cod-gray",
            "shadow.offset.y": -4,
            "outline.color": "cod-gray",
            "outline.size": 5,
            "align.horizontal": "center",
            "text.i18n": "ALPHA VERSION"
          }
        ],

        "settings_button": [
          "button/white-with-icon",
          {
            "widgets/icon/frame": "sprites/menu/gear.png",
            "bounds/icon/height.percents": 50,
            "z-order": 20
          }
        ],

        "shop_button": [
          "button/yellow-round-with-icon-and-label",
          {
            "widgets/icon/frame": "sprites/menu/shop-icon.png",
            "widgets/label/text.i18n": "SHOP",
            "bounds/icon": [
              {
                "width.percents": 75,
                "keep-ratio": true
              }
            ]
          }
        ],

        "stats_button": [
          "button/yellow-round-with-icon-and-label",
          {
            "widgets/icon/frame": "sprites/menu/stats-icon.png",
            "widgets/label/text.i18n": "STATISTICS",
            "bounds/icon": [
              {
                "width.percents": 75,
                "keep-ratio": true
              }
            ]
          }
        ],

        "game_features_button": [
          "app/screen/lobby/game-features-button"
        ],

        "play_button": [
          "button/yellow-with-label",
          {
            "widgets": [
              {
                "label": [
                  {
                    "text.i18n": "PLAY ONLINE",
                    "align.horizontal": "left"
                  }
                ],

                "server-statistics": [
                  "font/bold",
                  {
                    "anchor-point.x": 0,
                    "anchor-point.y": 1,
                    "instantiate": "ax::Label",
                    "font.size": 48,
                    "line-spacing": -20,
                    "font.color": "cod-gray",
                    "align.horizontal": "left",
                    "overflow": "resize-height",
                    "wrap": true,
                    "z-order": 10
                  }
                ]
              }
            ],
            "bounds": [
              {
                "label": [
                  {
                    "anchor.x": 0,
                    "anchor.y": 0.5,
                    "anchor.reference.x": 0.05,
                    "anchor.reference.y": 0.60
                  }
                ],

                "server-statistics": [
                  {
                    "anchor.x": 0,
                    "anchor.y": 1,
                    "anchor.reference.x": 0.05,
                    "anchor.reference.y": 0.45,
                    "width.percents": 90
                  }
                ]
              }
            ],
            "z-order": 20
          }
        ],

        "debug_button": [
          "button/green-with-label",
          {
            "widgets/label/text": "DEBUG",
            "z-order": 20,
            "visible": false
          }
        ],

        "debug_activator": []
      }
    ]
  }
}
