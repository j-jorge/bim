      "nine-slice/rounded-dark-rectangle",
      {
        "instantiate": "nine_slices",
        "z-order": -10
      }
    ],

    "stats-main-title": [
      "font/fancy-regular",
      {
        "instantiate": "ax::Label",
        "font.size": 52,
        "font.color": "amber",
        "outline.color": "cod-gray",
        "outline.size": 5,
        "text.i18n": "Your statistics"
      }
    ],

    "arena-games-total-title": [
      "app/screen/lobby/stat-title",
      {
        "text.i18n": "Games"
      }
    ],
    "arena-victories-title": [
      "app/screen/lobby/stat-title",
      {
        "text.i18n": "Victories"
      }
    ],
    "arena-defeats-title": [
      "app/screen/lobby/stat-title",
      {
        "text.i18n": "Defeats"
      }
    ],
    "arena-draws-title": [
      "app/screen/lobby/stat-title",
      {
        "text.i18n": "Draws"
      }
    ],
    "success-rate-title": [
      "app/screen/lobby/stat-title",
      {
        "text.i18n": "Success rate"
      }
    ],

    "arena-games-total-background": [
      "app/screen/lobby/stat-background"
    ],
    "arena-victories-background": [
      "app/screen/lobby/stat-background"
    ],
    "arena-defeats-background": [
      "app/screen/lobby/stat-background"
    ],
    "arena-draws-background": [
      "app/screen/lobby/stat-background"
    ],

    "arena_games_total": [
      "app/screen/lobby/stat-value-label"
    ],
    "arena_victories": [
      "app/screen/lobby/stat-value-label"
    ],
    "arena_defeats": [
      "app/screen/lobby/stat-value-label"
    ],
    "arena_draws": [
      "app/screen/lobby/stat-value-label"
    ],

    "success_rate_percents": [
      "app/screen/lobby/stat-value-label",
      {
        "anchor-point.x": 0.5,
        "anchor-point.y": 0.5,
        "font.color": "desert-storm",
        "text": "-"
      }
    ],

    "success_rate_progress": [
      {
        "type": "radial",

        "sprite": [
          {
            "frame": "sprites/menu/success-rate-disc.png",
            "color": "desert-storm"
          }
        ]
      }
    ],

    "success-rate-progress-background": [
      {
        "instantiate": "ax::Sprite",
        "frame": "sprites/menu/success-rate-disc-empty.png",
        "color": "desert-storm",
        "z-order": -5
      }
    ]
  }
}
