{
  "style": {
    "background": [
      "layout/fill"
    ],
    "pattern": [
      "layout/fill",
      {
        "width.percents": 150,
        "height.percents": 150
      }
    ],

    "top-shadow": [
      {
        "anchor.x": 0.5,
        "anchor.y": 0.5,
        "anchor.reference.x": 0.5,
        "anchor.reference.y": 1,
        "width.percents": 200,
        "keep-ratio": true
      }
    ],

    "left-shadow": [
      {
        "anchor.x": 0,
        "anchor.y": 0.5,
        "anchor.reference.x": 0,
        "anchor.reference.y": 0.5,
        "width.percents": 49,
        "height.percents": 100
      }
    ],

    "right-shadow": [
      {
        "anchor.x": 1,
        "anchor.y": 0.5,
        "anchor.reference.x": 1,
        "anchor.reference.y": 0.5,
        "width.percents": 49,
        "height.percents": 100
      }
    ],

    "bottom-shadow": [
      {
        "anchor.x": 0.5,
        "anchor.y": 0.5,
        "anchor.reference.x": 0.5,
        "anchor.reference.y": 0,
        "width.percents": 200,
        "keep-ratio": true
      }
    ]
  }
}
