{
  "style": {
    "action.pressed": [
      {
        "instantiate": "spawn",
        "ease": "sine-out",

        "scale": [
          {
            "instantiate": "scale",
            "to": 0.9,
            "duration": 0.3
          }
        ],

        "tint": [
          {
            "instantiate": "tint",
            "to": "#c0c0c0",
            "duration": 0.3
          }
        ]
      }
    ],

    "action.released": [
      {
        "instantiate": "spawn",

        "scale": [
          {
            "instantiate": "scale",
            "to": 1,
            "duration": 0.2
          }
        ],

        "tint": [
          {
            "instantiate": "tint",
            "to": "white",
            "duration": 0.3
          }
        ]
      }
    ],

    "display.pressed": [],
    "display.release": [],
    "display.disabled": [],

    "sound.click": "tick"
  }
}
