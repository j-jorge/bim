      {
        "decorum-on/widgets/fill": [
          {
            "frame": "sprites/menu/vertical-green-gradient.png"
          }
        ],

        "label": [
          "font/fancy-regular",
          {
            "instantiate": "ax::Label",
            "font.size": 106,
            "font.color": "white",
            "shadow.color": "cod-gray",
