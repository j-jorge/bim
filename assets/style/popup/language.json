{
  "style": {
    "popup": [
      "popup/full-screen"
    ],

    "message-popup": [
      "popup/yes_no_message"
    ],

    "language-label-path": "container/label",

    "list-item": [],

    "list-item-controls": [
      {
        "button": [
          "popup/language/button"
        ]
      }
    ],

    "list-item-bounds": [
      {
        "button": [
          "layout/center",
          {
            "width.percents": 70,
            "height.percents": 90
          }
        ]
      }
    ],

    "widgets": [
      {
        "title": [
          "font/bold",
          {
            "instantiate": "ax::Label",
            "text.i18n": "Language",
            "font.color": "desert-storm",
            "font.size": 90
          }
        ],

        "list/item-size": [
          {
            "width.percents": 100,
            "height-ratio": 0.2
          }
        ],

        "close_button": [
          "button/back"
        ]
      }
    ],

    "bounds": [
      {
        "title": [
          {
            "anchor.x": 0.5,
            "anchor.y": 0.5,
            "anchor.reference.x": 0.5,
            "anchor.reference.y": 0.95
          }
        ],

        "list": [
          {
            "anchor.x": 0.5,
            "anchor.y": 0,
            "anchor.reference.x": 0.5,
            "anchor.reference.y": 0.18,
            "width.percents": 95,
            "height.percents": 70
          }
        ],

        "close_button": [
          "layout/back-button"
        ]
      }
    ]
  }
}
