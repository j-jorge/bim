{
  "style": {
    "popup": [
      "popup/base",
      {
        "widgets/client_container/cascade-opacity": true,

        "bounds/client_container": [
          {
            "anchor.reference.y": 0.6,
            "width.percents": 100,
            "height.percents": 20
          }
        ],

        "display.show": [
          {
            "client_container/opacity": 0
          }
        ],

        "action.show": [
          {
            "client_container": [
              {
                "instantiate": "spawn",

                "fade": [
                  {
                    "instantiate": "fade",
                    "to": 1,
                    "duration": 0.2
                  }
                ],

                "move": [
                  {
                    "instantiate": "move",
                    "ease": "quadratic-out",
                    "from.y": 0.45,
                    "duration": 0.3
                  }
                ]
              }
            ]
          }
        ]
      }
    ],

    "widgets": [
      {
        "stats-background": [
          "nine-slice/rounded-dark-rectangle",
          {
            "instantiate": "nine_slices",
            "z-order": -10
          }
        ],

        "spike": [
          {
            "instantiate": "ax::Sprite",
            "frame": "sprites/menu/rounded-dark-rectangle-spike.png",
            "flip.y": true,
            "z-order": -9
          }
        ],

        "stats-main-title": [
          "font/fancy-regular",
          {
            "instantiate": "ax::Label",
            "font.size": 52,
            "font.color": "amber",
            "outline.color": "cod-gray",
            "outline.size": 5,
            "text.i18n": "Your statistics"
          }
        ],

        "arena-games-total-title": [
          "app/screen/lobby/stat-title",
          {
            "text.i18n": "Games"
          }
        ],
        "arena-victories-title": [
          "app/screen/lobby/stat-title",
          {
            "text.i18n": "Victories"
          }
        ],
        "arena-defeats-title": [
          "app/screen/lobby/stat-title",
          {
            "text.i18n": "Defeats"
          }
        ],
        "arena-draws-title": [
          "app/screen/lobby/stat-title",
          {
            "text.i18n": "Draws"
          }
        ],
        "success-rate-title": [
          "app/screen/lobby/stat-title",
          {
            "text.i18n": "Success rate"
          }
        ],

        "arena-games-total-background": [
          "app/screen/lobby/stat-background"
        ],
        "arena-victories-background": [
          "app/screen/lobby/stat-background"
        ],
        "arena-defeats-background": [
          "app/screen/lobby/stat-background"
        ],
        "arena-draws-background": [
          "app/screen/lobby/stat-background"
        ],

        "arena_games_total": [
          "app/screen/lobby/stat-value-label"
        ],
        "arena_victories": [
          "app/screen/lobby/stat-value-label"
        ],
        "arena_defeats": [
          "app/screen/lobby/stat-value-label"
        ],
        "arena_draws": [
          "app/screen/lobby/stat-value-label"
        ],

        "success_rate_percents": [
          "app/screen/lobby/stat-value-label",
          {
            "anchor-point.x": 0.5,
            "anchor-point.y": 0.5,
            "font.color": "desert-storm",
            "text": "-"
          }
        ],

        "success_rate_progress": [
          {
            "type": "radial",

            "sprite": [
              {
                "frame": "sprites/menu/success-rate-disc.png",
                "color": "desert-storm"
              }
            ]
          }
        ],

        "success-rate-progress-background": [
          {
            "instantiate": "ax::Sprite",
            "frame": "sprites/menu/success-rate-disc-empty.png",
            "color": "desert-storm",
            "z-order": -5
          }
        ]
      }
    ],

    "bounds": [
      {
        "stats-background": [
          "layout/fill"
        ],

        "spike": [
          {
            "reference": "stats-background",
            "anchor.x": 0.5,
            "anchor.y": 0,
            "anchor.reference.x": 0.9,
            "anchor.reference.y": 1,
            "offset.y": -32,
            "keep-ratio": true
          }
        ],

        "stats-main-title": [
          {
            "reference": "stats-background",
            "anchor.x": 0,
            "anchor.y": 0.5,
            "anchor.reference.x": 0.05,
            "anchor.reference.y": 0.93
          }
        ],

        "arena-games-total-title": [
          {
            "reference": "stats-background",
            "anchor.x": 0.5,
            "anchor.y": 0.5,
            "anchor.reference.x": 0.2,
            "anchor.reference.y": 0.78
          }
        ],

        "arena-victories-title": [
          {
            "reference": "stats-background",
            "anchor.x": 0.5,
            "anchor.y": 0.5,
            "anchor.reference.x": 0.5,
            "anchor.reference.y": 0.78
          }
        ],

        "arena-defeats-title": [
          {
            "reference": "stats-background",
            "anchor.x": 0.5,
            "anchor.y": 0.5,
            "anchor.reference.x": 0.2,
            "anchor.reference.y": 0.42
          }
        ],

        "arena-draws-title": [
          {
            "reference": "stats-background",
            "anchor.x": 0.5,
            "anchor.y": 0.5,
            "anchor.reference.x": 0.5,
            "anchor.reference.y": 0.42
          }
        ],

        "arena-games-total-background": [
          "app/screen/lobby/stat-background-bounds",
          {
            "anchor.reference.x": 0.2,
            "anchor.reference.y": 0.61
          }
        ],

        "arena-victories-background": [
          "app/screen/lobby/stat-background-bounds",
          {
            "anchor.reference.x": 0.5,
            "anchor.reference.y": 0.61
          }
        ],

        "arena-defeats-background": [
          "app/screen/lobby/stat-background-bounds",
          {
            "anchor.reference.x": 0.2,
            "anchor.reference.y": 0.25
          }
        ],

        "arena-draws-background": [
          "app/screen/lobby/stat-background-bounds",
          {
            "anchor.reference.x": 0.5,
            "anchor.reference.y": 0.25
          }
        ],

        "arena_games_total": [
          {
            "reference": "arena-games-total-background",
            "anchor.x": 0.5,
            "anchor.y": 0.5,
            "anchor.reference.x": 0.5,
            "anchor.reference.y": 0.5
          }
        ],

        "arena_victories": [
          {
            "reference": "arena-victories-background",
            "anchor.x": 0.5,
            "anchor.y": 0.5,
            "anchor.reference.x": 0.5,
            "anchor.reference.y": 0.5
          }
        ],

        "arena_defeats": [
          {
            "reference": "arena-defeats-background",
            "anchor.x": 0.5,
            "anchor.y": 0.5,
            "anchor.reference.x": 0.5,
            "anchor.reference.y": 0.5
          }
        ],

        "arena_draws": [
          {
            "reference": "arena-draws-background",
            "anchor.x": 0.5,
            "anchor.y": 0.5,
            "anchor.reference.x": 0.5,
            "anchor.reference.y": 0.5
          }
        ],

        "success-rate-title": [
          {
            "reference": "stats-background",
            "anchor.x": 0.5,
            "anchor.y": 0.5,
            "anchor.reference.x": 0.8,
            "anchor.reference.y": 0.78
          }
        ],

        "success_rate_percents": [
          {
            "reference": "stats-background",
            "anchor.x": 0.5,
            "anchor.y": 0.5,
            "anchor.reference.x": 0.8,
            "anchor.reference.y": 0.43
          }
        ],

        "success-rate-progress-background": [
          {
            "reference": "stats-background",
            "anchor.x": 0.5,
            "anchor.y": 0.5,
            "anchor.reference.x": 0.8,
            "anchor.reference.y": 0.43,
            "height.percents": 50,
            "width-ratio": 1
          }
        ],

        "success_rate_progress": [
          {
            "reference": "stats-background",
            "anchor.x": 0.5,
            "anchor.y": 0.5,
            "anchor.reference.x": 0.8,
            "anchor.reference.y": 0.43,
            "height.percents": 50,
            "width-ratio": 1
          }
        ]
      }
    ]
  }
}
