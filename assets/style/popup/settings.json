{
  "style": {
    "popup": [
      "popup/full-screen"
    ],

    "widgets": [
      {
        "title": [
          "font/bold",
          {
            "instantiate": "ax::Label",
            "text.i18n": "Settings",
            "font.color": "desert-storm",
            "font.size": 90
          }
        ],

        "music-icon": [
          {
            "instantiate": "ax::Sprite",
            "frame": "sprites/menu/music.png",
            "color": "desert-storm"
          }
        ],

        "music-label": [
          "popup/settings/font/main",
          {
            "text.i18n": "Music"
          }
        ],

        "music": [
          "toggle/flat"
        ],

        "sound-effects-icon": [
          {
            "instantiate": "ax::Sprite",
            "frame": "sprites/menu/audio.png",
            "color": "desert-storm"
          }
        ],

        "sound-effects-label": [
          "popup/settings/font/main",
          {
            "text.i18n": "Sound effects"
          }
        ],

        "sound_effects": [
          "toggle/flat"
        ],

        "vibrations-icon": [
          {
            "instantiate": "ax::Sprite",
            "frame": "sprites/menu/vibration.png",
            "color": "desert-storm"
          }
        ],

        "vibrations-label": [
          "popup/settings/font/main",
          {
            "text.i18n": "Vibrations"
          }
        ],

        "vibrations": [
          "toggle/flat"
        ],

        "d-pad-position-icon": [
          {
            "instantiate": "ax::Sprite",
            "frame": "sprites/menu/gamepad.png",
            "color": "desert-storm"
          }
        ],

        "d-pad-position-label": [
          "popup/settings/font/main",
          {
            "text.i18n": "Controls"
          }
        ],

        "d-pad-position-label-description-right": [
          "popup/settings/font/small",
          {
            "wrap": true,
            "text.i18n": "Directions on the right, actions on the left."
          }
        ],

        "d-pad-position-label-description-left": [
          "popup/settings/font/small",
          {
            "wrap": true,
            "text.i18n": "Directions on the left, actions on the right."
          }
        ],

        "d_pad_position": [
          "popup/settings/toggle/controls"
        ],

        "d-pad-kind-icon": [
          {
            "instantiate": "ax::Sprite",
            "frame": "sprites/menu/joystick.png",
            "color": "desert-storm"
          }
        ],

        "d-pad-kind-label": [
          "popup/settings/font/main",
          {
            "text.i18n": "Directions kind"
          }
        ],

        "d-pad-kind-label-description-stick": [
          "popup/settings/font/small",
          {
            "wrap": true,
            "text.i18n":
                "Analog stick, it pops where you tap and follows the drag."
          }
        ],

        "d-pad-kind-label-description-pad": [
          "popup/settings/font/small",
          {
            "wrap": true,
            "text.i18n": "Directional pad, at a fixed position on the screen."
          }
        ],

        "d_pad_kind": [
          "toggle/flat",
          {
            "widgets/label-off/text.i18n": "D-pad",
            "widgets/label-on/text.i18n": "Stick"
          }
        ],

        "bluesky_button": [
          "button/white-with-icon",
          {
            "widgets/icon": [
              {
                "frame": "sprites/menu/bluesky.png",
                "color": "white"
              }
            ],

            "bounds/icon/height.percents": 50
          }
        ],

        "github_button": [
          "button/white-with-icon",
          {
            "widgets/icon/frame": "sprites/menu/github.png",
            "bounds/icon/height.percents": 50
          }
        ],

        "mail_button": [
          "button/white-with-icon",
          {
            "widgets/icon/frame": "sprites/menu/mail.png",
            "bounds/icon/height.percents": 40
          }
        ],

        "share_button": [
          "button/white-with-icon",
          {
            "widgets/icon/frame": "sprites/menu/share.png",
            "bounds/icon/height.percents": 50
          }
        ],

        "close_button": [
          "button/yellow-with-label",
          {
            "widgets/label/text.i18n": "OK",
            "z-order": 0
          }
        ],

        "version": [
          "popup/settings/font/small"
        ]
      }
